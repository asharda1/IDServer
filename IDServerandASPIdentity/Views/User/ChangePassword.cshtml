<div class="modal fade in" id="changePassModal" tabindex="-1" role="dialog" style="display:block">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Change Password</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="CurrentPassword" class="col-md-3 control-label">Current Password</label>
                        <div class="col-md-9">
                            <input type="password" class="form-control" id="CurrentPassword" name="CurrentPassword" [(ngModel)]="userChangePasswordModel.OldPassword">
                            <a><small>Forgot your password?</small></a>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="NewPassword" class="col-md-3 control-label">New Password</label>
                        <div class="col-md-9">
                            <input type="password" class="form-control" id="NewPassword" name="NewPassword" [(ngModel)]="userChangePasswordModel.NewPassword">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="ConfimPassword" class="col-md-3 control-label">Confirm Passowrd</label>
                        <div class="col-md-9">
                            <input type="password" class="form-control" name="ConfimPassword" id="ConfimPassword" [(ngModel)]="userChangePasswordModel.ConfirmPassword">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Save</button>
                <button type="button" class="btn btn-default btn-sm">Cancel</button>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<div class="modal-backdrop fade in"></div>